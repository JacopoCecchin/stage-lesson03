<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lezione3.StackLayoutPage"
             BackgroundColor="Yellow"
             Title="STACK LAYOUT">
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Welcome to Stack Layout Page!"
                VerticalOptions="Start" 
                HorizontalOptions="Center" />
            <Button
                x:Name="Prova1"
                Text="Prova 1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="Prova1_Clicked"/>
            <Button
                x:Name="Prova2"
                Text="Prova 2"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Clicked="Prova2_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>